{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": [ 
			"es5",
			"es2015"
		],
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts"
	]
}